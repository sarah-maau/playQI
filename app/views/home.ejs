<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">Bienvenue sur Play Q.I.</h2>
    <p class="lead">Découvrez une collection de jeux-questionnaires amusants pour booster votre Q.I. sur les animaux, les arts, la géographie, l'histoire, la gastronomie et les sciences.</p>
</div>

<h3>Explorez par catégories</h3>
<div class="row">
    <% tags.forEach(tag => { %>
    <div class="col-3 p-4 text-center">
        <a class="btn btn-block btn-lg tag tag--<%=tag.getLabel()%>" href="/tag/<%=tag.id%>">
            <%=tag.name%>
        </a>
    </div>
    <% }) %>
</div>
<h3>Les quiz populaires</h3>
<div class="card-deck row mb-3 text-center">
    <% quizzes.forEach((quiz) => { %>
        <%- include('partials/card', {quiz}) %> 
    <% }) %>
</div>

<%- include('partials/footer') %>